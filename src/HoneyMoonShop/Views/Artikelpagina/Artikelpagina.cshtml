@{
    Layout = "_HoneyMoon";
    ViewData["Title"] = "Artikel Pagina";
}
<!DOCTYPE html>
<head>
    <link href="http://fonts.googleapis.com/css?family=Amaranth" rel=stylesheet />
    <script>
function imageswap(letter){
    document.getElementById('bigPicture').src = "/Images/" + @ViewData["Nummer"]  + letter + ".png";

}
    </script>


</head>
<div class="container">
    @{/* TODO: missing css classes? */}
   <div class="row" style="margin-top: 10%;">
        <div style="padding-left: 30px">
        <a class="terug-button" href="#" style="color: #000000">Terug naar overzicht</a>
    </div>
    </div>
    <div class="row" style="margin-top: 5%;">
        <div class="col-md-3" align="right">
            <div class="row">
                <div class="col-md-12" style="padding-bottom: 20px">
                    @{var imga = ViewData["pl1"];}
                    <img id="imga" img src=@imga class="img-responsive" alt="dress1" width="230" height="200" onclick="imageswap('a');" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-12" style="padding-bottom: 20px">
                    @{var imgb = ViewData["pl2"];}
                    <img id="imgb" img src=@imgb class="img-responsive" alt="dress2" width="230" height="200" onclick="imageswap('b');" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @{var imgc = ViewData["pl3"];}

                    <img id="imgc" img src=@imgc class="img-responsive" alt="dress3" width="230" height="200" onclick="imageswap('c');" />
                </div>
            </div>
        </div>


        <div class="col-md-6" align="center">

            <img id="bigPicture" src="@imga" alt="jurkje" class="img-responsive" width="550" height="700" />

        </div>


        <div class="col-md-3">
            @{ var a = ViewData["merkje"]; }
            <h2 style="font-family:'Amaranth'; font-size:larger"><b><strong> @a</strong></b> </h2>
            <p>@{var g = @ViewData["nummer"];}</p>
            <p><strong></strong> artikel nr: @g <strong></strong></p>
            <br />
            @{ var tekst = ViewData["Omschrijving"];}
            @{ var minp = ViewData["min"]; }
            @{ var maxp = ViewData["maxi"];}
            @{ var stijlk = ViewData["stylo"]; }
            @{ var nl = ViewData["nek"];}
            @{ var sil = ViewData["sil"];}
            <p>Omschrijving:<p style="color:#F9C8C4"> @tekst</p> </p>
            <br />
            <p>Merk: @a</p>
            <p>Kenmerken: @g, @stijlk , @nl , @sil</p>
            <p>Prijsindicatie: Tussen de @minp en @maxp euro </p>
            <p>
                Beschikbare kleuren:
                <a href="#" class="btn btn-circle-micro btn-default btn-colors" id="btn-colors-white"></a>
                <a href="#" class="btn btn-circle-micro btn-default btn-colors" id="btn-colors-pink"></a>
                <a href="#" class="btn btn-circle-micro btn-default btn-colors" id="btn-colors-red"></a>
            </p>
            <br />
            <p>Kom de jurken passen!</p>
            <div style="padding-top: 7px;">
                <a class="pink-button" href="#"><strong>pasafspraak maken</strong></a>
            </div>
        </div>


        <style>
            h4 {
                display: inline-block;
                padding: 0 15px;
                position: relative;
            }

                h4:before, h4:after {
                    background: black;
                    content: "";
                    display: block;
                    height: 3px;
                    position: absolute;
                    top: 50%;
                    width: 100%;
                }

                h4:before {
                    right: 100%;
                }

                h4:after {
                    left: 100%;
                }
        </style>
        <div class="col-md-12" align="center" style="padding-top: 30px">
            <h4><strong class="text-uppercase">Bijpassende sieraden</strong></h4>

            @{ var AcMerken = (List<string>)ViewData["AccessoireMerk"];}
            @{ var AcArtikel = (List<string>)ViewData["AccessoiresNum"];}
            @{ var AcLink = (List<string>)ViewData["AccessoireLink"];}
            @{  int aantal = 4;
                if (AcMerken.Count() < 5)
                {
                    aantal = AcMerken.Count();

                }
            }
            <div class="row">
                <span></span>
                @{for (int i = 0; i < aantal; i++)
                    {
                <div class="col-md-3">
                    <a class="sieranden-button" href=@AcLink[i] target="_blank" style="color: #000000">

                        <img src=@AcArtikel[i] class="img-responsive" alt="Een accessoire dat goed zou passen bij de door u gekozen jurk." width="230" height="200" />

                        <p class="pull-left"><strong>@AcMerken[i]</strong></p>

                    </a>
                </div>
                        }
                }
            </div>
            <div style="padding-top: 20px">
                <a class="pink-button" href="http://www.honeymoonshop.nl/bruid/accessoires/"><strong>bezoek de webshop</strong></a>
            </div>

            <br />

        </div>
        <br />

        @{ var jurken0 = ViewData["RandJurk0"];}
        @{ var jurkNaam0 = ViewData["jurkNaam0"];}

        @{ var jurken1 = ViewData["RandJurk1"];}
        @{ var jurkNaam1 = ViewData["jurkNaam1"];}

        @{ var jurken2 = ViewData["RandJurk2"];}
        @{ var jurkNaam2 = ViewData["jurkNaam2"];}

        @{ var jurken3 = ViewData["RandJurk3"];}
        @{ var jurkNaam3 = ViewData["jurkNaam3"];}


        <div class="col-md-12" align="center" style="padding-top: 30px">
            <h4><strong class="text-uppercase">of zijn deze jurken meer iets voor jou?</strong></h4>
            <div class="row">
                <div class="col-md-3">
                    <a class="jurken-button" href="#" style="color: #000000">
                        <img src=@jurken0 class="img-responsive" alt="image_jurk">
                        <p class="pull-left"><strong>@jurkNaam0</strong></p>
                    </a>
                </div>
                <div class="col-md-3">
                    <a class="jurken-button" href="#" style="color: #000000">
                        <img src=@jurken1 class="img-responsive" alt="image_jurk">
                        <p class="pull-left"><strong>@jurkNaam1</strong></p>
                    </a>
                </div>
                <div class="col-md-3">
                    <a class="jurken-button" href="#" style="color: #000000">
                        <img src=@jurken2 class="img-responsive" alt="image_jurk">
                        <p class="pull-left"><strong>@jurkNaam2</strong></p>
                    </a>
                </div>
                <div class="col-md-3">
                    <a class="jurken-button" href="#" style="color: #000000">
                        <img src=@jurken3 class="img-responsive" alt="image_jurk">
                        <p class="pull-left"><strong>@jurkNaam3</strong></p>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>