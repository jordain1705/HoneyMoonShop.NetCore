@{
    Layout = "_HoneyMoon";
    ViewData["Title"] = "Afsraak Pagina";
}
<!DOCTYPE html>
<html>


<body>
    <div class="container">

        <div class="row ">
            <div class="col-md-12" style="height: 220px; margin-top: 50px;" align="center">
                <div class="colltekst" style="display: inline-block;">
                    <h1 class="header-roze" style="position: relative; text-align: center; top: 0px; bottom: 0px; margin-left: 10%; margin-top: 26px; padding-top: 0px; padding-bottom: 0px; font-family: Georgia, Times, serif; color: #ffe5e8; font-size: 79px; font-style: italic; font-weight: 700;">Trouwjurken</h1>
                    <p class="ondertitel" style="position: absolute; text-align: center; margin-top: -3%; margin-left: 15%; padding-top: 0px; padding-bottom: 5px; font-family: Verdana, Geneva, sans-serif; font-size: 24px; font-weight: 700; text-transform: uppercase;">Maak je pasafspraak</p>
                </div>
            </div>
        </div>


        <div class="row" style="box-shadow: 0px 0px 10px #e6e6e6">
            <div class="col-md-2" align="left">
                <img src="~/Images/navStap1.png" class="img-responsive" alt="nav-bar" style="padding-top: 15px; padding-left:35px;" />
            </div>

            <div class="col-md-5" align="left" style="height:375px; padding-top: 25px; padding-bottom: 25px">
                <h3><strong>Stap 1, Datum en tijd selecteren</strong></h3>
                <p>Selecteer eerst een datum en vervolgens <br /> een tijdstip dat je wilt komen passen! </p>
                <p>Openingstijden:</p>
                <p>
                        <table>
                            <tr>
                                <th><strong>MA</strong></th>
                                <th>	<strong>12:00-17:30</strong></th>
                            </tr>
                            <tr>
                                <th><strong>DI-VR</strong></th>
                                <th> <strong> 9:30-17:30</strong></th>
                            </tr>
                            <tr>
                                <th><strong>ZA</strong></th>
                                <th>	<strong>9:30-18:00</strong></th>
                            </tr>
                            <tr>
                                <th><strong>ZO</strong></th>
                                <th> <strong>11:00-17:00</strong></th>
                            </tr>
                            
                        </table>
                   
                </p>
                <p>*Op alle werkdagen kunnen er ook schoenen worden <br /> gepast.helaasis dit niet mogelijk in het weekend.</p>
                <br />
                <a class="pink-button" href="@Url.Action("DatePickerGegevens", "DatePicker")"><strong>naar stap 2</strong></a>
                <br />
                <br />
            </div>

            <div class="col-md-5" align="left" style="height:375px;background-color: #F0597A;padding-left: 50px;">
                <h3 style="color: #fff">Selecteer een tijdstip:</h3>
                <br />
                <p class="testing" align="center" style="padding: 15px; width: 350px;color:#fff;font-size: 1.2em"><strong>DO 15 september 2016</strong></p>
                <br />
                <form action="" style="color: #FFF;">
                    <input type="radio" name="tijd" value="9:30"><strong>9:30 uur</strong><br>
                    <input type="radio" name="tijd" value="12:30"><strong>12:30 uur</strong><br>
                    <input type="radio" name="tijd" value="15:00"><strong>15:00 uur</strong>
                </form>

                <a href="#" style="color: #FFF; line-height: 250px; vertical-align: bottom">Terug naar datum selecteren</a>

            </div>

        </div>
    </div>
</body>

</html>
