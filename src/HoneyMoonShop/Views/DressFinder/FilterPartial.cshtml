<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>

    $(function () {
        $("#slider-range").slider({
            range: true,
            @{var minprijs = (int)(ViewData["minprijs"]); }
            @{var maxprijs = (int)(ViewData["maxprijs"]); }
            min: @minprijs,
            max: @maxprijs,
            values: [@minprijs, @maxprijs],
            slide: function (event, ui) {
                $("#amount").val("$" + ui.values[0] + " - $" + ui.values[1]);
            }
        });
        $("#amount").val("$" + $("#slider-range").slider("values", 0) +
            " - $" + $("#slider-range").slider("values", 1));
        $( ".selector" ).slider({
            change: function( event, ui ) {}
        });
        $( ".selector" ).on( "slidechange", function( event, ui ) {
            alert('Hello World!');
        } );
    });
</script>
<script>
    function myFunction() {
        var e =  document.getElementById("checkboxcontainer");
        e.style.display= (e.style.display === 'block')?'none': 'block';

    }
    function myFunction2() {
        var e =  document.getElementById("checkboxcontainer2");
        e.style.display= (e.style.display === 'block')?'none': 'block';
    }
</script>
<script>
    function filterClick() {
        
        var checkedValues = $('input[type=checkbox]:checked').map(function()
        {
            return $(this).val();
        }).get();

        $.ajax({
            url: '@Url.Action("Filterverwerken", "Dressfinder")',
            traditional:true,
            data: {checkedValues}
        }).done(function(result) {
            $('#productPartial').html(result);
        }).fail(function(errorThrown) {
            alert('fail:');
            console.log(errorThrown);
        });
    }
</script>

<div class="col-md-3">
    @* filterlijst *@
    <!--<img src="https://placekitten.com/150/800" class="pull-left img-responsive" alt="placeholder">-->

    <p style="padding-top:30px; font-family: 'Oswald', sans-serif"><strong>CATEGORIEËN:</strong></p>
    <button type="submit" class="button1" style="padding-left:10px;" onclick="myFunction()">Summer Sale</button> <br>
    <button type="submit" class="button1" style="padding-left:10px;" onclick="alert('Hello World!')">Nieuwe Collectie</button> <br>
    <button type="submit" class="button1" style="padding-left:10px;" onclick="alert('Hello World!')">Alle jurken bekijken</button> <br>

    <div>
        <p style="padding-top:30px; font-family: 'Oswald', sans-serif;"><strong>Filter op:</strong></p>
        <button class="merkbutton" onclick="myFunction()"><strong>Merk</strong></button> <br>
        <form id="filter" method="post">
            @* todo:juiste manier *@
            @{var merken = (List<string>)ViewData["merken"]; }
            <div id="checkboxcontainer">
                @foreach (var item in merken)
                {
                    <p><input type="checkbox" onclick="filterClick()" name="@item" id="@item" value=@item style="height: 12px; font-family: 'Open Sans', sans-serif" />@item</p>
                }
            </div>
        </form>
        <br>
    </div>

    <div>
