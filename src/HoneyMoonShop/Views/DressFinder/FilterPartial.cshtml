<div class="col-md-3">
    @* filterlijst *@
    <!--<img src="https://placekitten.com/150/800" class="pull-left img-responsive" alt="placeholder">-->

    <p style="padding-top:30px ;font-family: 'Oswald', sans-serif"><strong>CATEGORIEËN:</strong></p>
    <button type="submit" class="button1" style="padding-left:10px;" onclick="myFunction()">Summer Sale</button> <br>
    <button type="submit" class="button1" style="padding-left:10px;" onclick="alert('Hello World!')">Nieuwe Collectie</button> <br>
    <button type="submit" class="button1" style="padding-left:10px;" onclick="alert('Hello World!')">Alle jurken bekijken</button> <br>


    <div>
        <p style="padding-top:30px; font-family: 'Oswald', sans-serif;"><strong>Filter op:</strong></p>
        <button class="merkbutton" onclick="myFunction()"><strong>Merk</strong></button> <br>
        <form name="filter" asp-controller="DressFinder" asp-action="filterVerwerken" method="get">
            @* todo:juiste manier *@
            @{var merken = (List<string>)ViewData["merken"]; }
            <div id="checkboxcontainer">
                @foreach (var item in merken)
                {
                    <p><input type="checkbox" name="@item" value=@item style="height:12px;font-family: 'Open Sans', sans-serif" />@item</p>
                }
            </div>
        </form>
        <br>
    </div>

    <div>
        <button class="merkbutton" onclick="myFunction2()"><strong>STIJL</strong></button> <br>
        <form name="filter" asp-controller="DressFinder" asp-action="filterVerwerken" method="get">
            @{var stijlen = (List<string>)ViewData["stijlen"]; }

            <div id="checkboxcontainer2">
                @foreach (var item in stijlen)
                {
                    <p><input type="checkbox" name="stijl" value=@item style="height:12px; font-family: 'Open Sans', sans-serif" checked />@item</p>
                }
            </div>
        </form>
    </div>
    <p>
        <label for="amount">Prijs</label>
        <input type="text" id="amount" readonly style="border:0; color:#F0597C; font-weight:bold; background: 0">
    </p>
    <div id="slider-range"></div>

    <div>
        <p style="font-family: 'Oswald', sans-serif;padding-top:25px; "><strong>Filters verfijnen:</strong></p>
        <br>
        @{var neklijn = (List<string>)ViewData["neklijnen"]; }
        <select class="dropdown" name="Neklijn" onchange="if (this.selectedIndex) doSomething()">
            <!--does something when its selected(like get the dresses and reload them)-->
            <option value=0>Neklijn </option>
            @foreach (var item in neklijn)
            {
                <option value=@item> @item </option>
            }
        </select>
        <br>
        @{var silhouette = (List<string>)ViewData["silhouette"]; }
        <select class="dropdown" name="Silhouette" onchange="if (this.selectedIndex) doSomething()">
            <!--does something when its selected(like get the dresses and reload them)-->
            <option value=0>Silhouette</option>
            @foreach (var item in silhouette)
            {
                <option value=@item> @item </option>
            }
        </select>
        <br>
        @{var kleuren = (List<string>)ViewData["kleuren"]; }
        <select class="dropdown" name="Kleuren" onchange="if (this.selectedIndex) doSomething()">
            <!--does something when its selected(like get the dresses and reload them)-->
            <option value=0>Kleuren </option>
            @foreach (var item in kleuren)
            {
                <option value=@item> @item </option>
            }
        </select>
    </div>

</div>
